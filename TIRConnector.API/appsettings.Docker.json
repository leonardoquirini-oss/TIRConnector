{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=True;Encrypt=False;MultipleActiveResultSets=true"
  },
  "ApiKeySettings": {
    "Keys": "${API_KEYS}"
  },
  "QuerySettings": {
    "TimeoutSeconds": 30,
    "MaxRows": 1000,
    "AllowedCommands": [ "SELECT" ],
    "EnableQueryValidation": true
  },
  "Cors": {
    "AllowedOrigins": [ "${CORS_ORIGINS}" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
    "AllowedHeaders": [ "*" ]
  }
}
